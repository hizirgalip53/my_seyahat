@model TatilSeyahatSitesi.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "UpdateYorum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>

<form class="form-group" method="post">
    @Html.HiddenFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br /><br />
    <label>E-Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br /><br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Yorum, 10, 1, new { @class = "form-control" })
    <br /><br />
    <button type="submit" class="btn btn-outline-success">Yorum Güncelle</button>
</form>
