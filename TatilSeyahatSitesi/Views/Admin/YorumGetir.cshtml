@model TatilSeyahatSitesi.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>

 @using (Html.BeginForm("UpdateYorum", "Admin", FormMethod.Post))
 { 
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br /><br />
    <label>E-Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br /><br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Yorum, 10, 1, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-success">Yorum Güncelle</button>
 }