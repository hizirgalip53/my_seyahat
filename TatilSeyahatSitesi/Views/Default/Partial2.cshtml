@model List<TatilSeyahatSitesi.Models.Siniflar.Blog>
@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:250px; height:150px;"  />
        </div>
        <div class="left-text">

            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0,100)</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>

}
